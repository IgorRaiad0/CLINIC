<h2>Editar Paciente</h2>
<form action="/ADM/atualizarPaciente/{{paciente.id}}" method="POST">
    <label>Nome:</label>
    <input type="text" name="nome" value="{{paciente.nome}}" required><br>

    <label>Data de Nascimento:</label>
    <input type="date" name="dataNascimento" value="{{paciente.dataNascimento}}" required><br>

    <label>Telefone:</label>
    <input type="text" name="telefone" value="{{paciente.telefone}}" required><br>

    <label>CPF:</label>
    <input type="text" name="cpf" value="{{paciente.cpf}}" required><br>

    <button type="submit">Salvar Alterações</button>
</form>
